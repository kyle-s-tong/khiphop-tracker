<div class="grid grid-cols-3 mt-8 w-3/4 self-center">
  <div class="col-span-2">
    {{@model.name}}
    <div class="flex flex-col">
      {{#each @model.albums as |album|}}
        <p>{{album.name}}</p>
      {{/each}}
    </div>
  </div>
  <div class="col-span-1">
    <img src={{@model.images.firstObject.url}}>
  </div>
</div>