<div class="h-screen w-full flex flex-col items-center p-4">
  <SiteHeader::SiteHeader />
  <SearchBar::SearchBar
    @updateSearchResults={{this.updateSearchResults}}
    @clearSearch={{this.clearSearch}}
  />
  <SearchResults::SearchResults
    @results={{this.searchResults}}
    @addArtist={{this.addArtist}}
  />
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-3 pt-4">
    {{#if this.model}}
      {{#each this.model as |artist|}}
        <div class="flex flex-col">
          <LinkTo @route='artist' @model={{artist.id}}>
            <img src={{artist.images.firstObject.url}}>
          </LinkTo>
          {{artist.name}}
        </div>
      {{/each}}
    {{/if}}
  </div>
</div>