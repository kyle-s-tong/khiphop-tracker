<LinkTo @route={{@linkRoute}} @model={{@linkModelId}}>
  <div class="flex relative">
    <img src={{@image}}>
    <div class="flex flex-col absolute w-full h-full items-center justify-center text-white bg-overlay-25 hover:bg-overlay-75">
      <p class="text-xs md:text-lg uppercase">
        {{@artist.name}}
      </p>
      <p class="uppercase text-xs">
        {{#if @album}}
          {{@album.releaseType}}
          {{#if albumArtistDifferentFromArtist}}
            ({{@album.artist.name}})
          {{/if}}
        {{/if}}
      </p>
    </div>
  </div>
</LinkTo>