<LinkTo @route={{@linkRoute}} @model={{@linkModelId}}>
  <div class="flex relative">
    <img src={{@image}} alt={{@artist.name}}>
    <div class="flex flex-col absolute w-full h-full items-center justify-center text-white bg-overlay-25 hover:bg-overlay-75">
      <p class="text-xs tracking-wide md:text-lg xl:text-5xl uppercase overlay">
        {{@artist.name}}
      </p>
      <p class="uppercase leading-loose text-xs xl:text-xl overlay">
        {{#if @album}}
          {{@album.releaseType}}
          {{#if albumArtistDifferentFromArtist}}
            ({{@album.artist.name}})
          {{/if}}
        {{/if}}
      </p>
    </div>
  </div>
</LinkTo>