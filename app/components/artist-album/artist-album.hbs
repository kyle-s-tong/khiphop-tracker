<LinkTo @route={{@linkRoute}} @model={{@linkModelId}}>
  <div class="flex relative">
    <img src={{@image}} alt={{@artist.name}}>
    <div class="flex flex-col absolute shadow w-full h-full items-center justify-center text-white bg-overlay-10 hover:bg-overlay-75">
      <p class="text-xs tracking-wide md:text-lg xl:text-5xl uppercase text-border">
        {{@artist.name}}
      </p>
      <p class="uppercase leading-loose text-xs xl:text-xl text-border">
        {{#if @album}}
          {{@album.releaseType}}
          {{#if this.albumArtistDifferentFromArtist}}
            ({{@album.artists.firstObject.name}})
          {{/if}}
        {{/if}}
      </p>
    </div>
  </div>
</LinkTo>